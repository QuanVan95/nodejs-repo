<div class="mt-r">
    <h3>
        Edit Course
    </h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="input" class="form-control" value="{{course.title}}" id="title" name="title">
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
    </div>

    <div class="form-group">
        <label for="videoId">Video Id</label>
        <input type="input" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
    </div>
        <button type="submit" class="btn btn-primary" >Save</button>
    </form>

</div>